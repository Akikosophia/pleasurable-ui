            /* box-shadow: 5px 5px 7px 0px #a6a6a6; */
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        }

        img {
            grid-column: 1 /2;
            grid-row: 1 / 3;
            margin: 20px;
            margin-left: 40px;
            padding-bottom: 0px;
            border-radius: 15px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        }

        h2 {
            grid-column: 2 / 4;
            grid-row: 1 / 2;
        
            margin: 10px, 20px, 5px, 5px;
            padding-right: 10px;
            font-size: 20px;
        }

        .auteur {
            grid-column: 2 / 4;
            grid-row: 2 / 3;

            margin-top: -110px;
            margin: 10px, 20px, 5px, 5px;
            font-size: 18px;
        }

        .tijd {
            grid-column: 1 / 3;
            grid-row: 3 / 4;
            margin: 0px 0px 18px 42px;
            font-size: 16px;
        }

        .date {
            color: crimson;
            font-weight: bold;
        }

        /* UI thingyyy */
       
        article {
            animation: slide-in-left 0.4s ease-out forwards;
        }
        h2 {
            animation-delay: 1s;
            animation: slide-in-left 0.9s ease-out forwards;
        }
        .auteur {
            animation: slide-in-left 0.8s ease-out forwards;
        }
        .tijd {
            animation: slide-in-left 0.7s ease-out forwards;
        }
        img {
	        animation: slide-in-left 0.6s ease-out forwards;     
        }
        /* Elke +1 op img komt met een delay van X seconde */
        @keyframes slide-in-left {
        0% {
                    transform: translateX(-1000px);
                opacity: 0;
        }
        100% {
                    transform: translateX(0);
                    opacity: 1;
        }
        }

        img:hover{            
            transform: scale(1);
            animation-name: jump;
            animation-duration: 3s;
            animation-iteration-count: 2;
            animation-delay: 0.6s;
        }
        @keyframes jump {
            0% {
                transform: rotate(0deg);
            }
            15% {
                transform: rotate(5deg);
                animation-duration: 0.5s;
            }
            30% {
                transform: rotate(-5deg);
                animation-duration: 0.5s;
            }
            45% {
                transform: rotate(0deg);
            }
            60% {
                transform: 
                rotateY(-360deg)
                translateY(-60px);
                animation-duration: 0.5s;
            }
            80% {
                transform:
                translateY(0);
            }
            95% {
                transform: translateY(-5px);
            }
            100%{
                transform: 
                skewY(350px)
                translateY(0);
            }
           
        } 

